<body>
    <div class="container">
        <form action="/" method="post">
            <label> Who just sent the money</label>
            <select class="form-select" aria-label="Default select example" name="contributor">
                <option>Ernest</option>
                <option>Wakomo</option>
                <option>Karago</option>
                <option>Wechuli</option>
                <option>Munguti</option>
                <option>Sam</option>
                <option>Lukas</option>
                <option>Steve</option>
                <option>Dalton</option>
                <option>Koome</option>
                <option>Gichui</option>
            </select>
        
            <div class="mb-3">
                <label class="form-label">How much did they send?:</label>
                <input type="number"  name="amount" value= "250" class="form-control"  aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text"></div>
              </div>
            <div class="mb-3">
                <label class="form-label">Date sent</label>
                <input type="date"  name="date" class="form-control"  aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text"></div>
              </div>
          
            <div class="mb-3">
                <label class="form-label">Time sent</label>
                <input type="time"  name="time" class="form-control"  aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text"></div>
              </div>
            <label>Being in payment for:</label>
            <select class="form-select" aria-label="Default select example" name="paymentFor">
                <option>Past 1 week</option>
                <option>Past 2 weeks</option>
                <option>Past 3 weeks</option>
                <option>Past 4 weeks</option>
                <option> Other<input type="textarea"  name="textarea" class="form-control" placeholder="Other" aria-describedby="emailHelp"></option>
                
                          
            </select>
            <br>
            
                <button class="btn btn-primary"type="submit">Submit</button>
        </form>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

